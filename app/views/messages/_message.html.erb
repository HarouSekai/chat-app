
    <div class="chat">
      <div class="chat_title">
        <div class="chat_title_user">
          <!-- 投稿したユーザー名情報を出力する -->
          <%= message.user.name %>
        </div>
        <div class="chat_title_data">
          <!-- 投稿した時刻を出力する -->
          <%= l message.created_at %>
        </div>
      </div>
      <div class="chat_main">
        <div class="chat_content">
          <!-- 投稿したメッセージ内容を記述する -->
          <%= message.content %>
        </div>
        <%= image_tag message.image.variant(resize: '500x500'), class: 'message-image' if message.image.attached? %>
      </div>
    </div>
    