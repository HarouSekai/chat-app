  <div class="main_header">
    <div class="main_room_name">
      room1
    </div>
    <div class="delete_chat">
      <a href="#">チャットを終了する</a>
    </div>
  </div>

  <div class="main_content">

    <div class="chat">
      <div class="chat_title">
        <div class="chat_title_user">
          Tom
        </div>
        <div class="chat_title_data">
          2020/3/31(Wed) 12:43:30
        </div>
      </div>
      <div class="chat_main">
        おはよう
      </div>
    </div>
    
    <div class="chat">
      <div class="chat_title">
        <div class="chat_title_user">
          Tom
        </div>
